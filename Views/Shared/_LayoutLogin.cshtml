    <script src="~/assets/js/app.min.js"></script>

    <script src="~/assets/bundles/izitoast/js/iziToast.min.js"></script>
    <!-- Page Specific JS File -->
    
    <!-- JS Libraies -->
    <!-- Page Specific JS File -->
    <!-- Template JS File -->
    <script src="~/assets/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="~/assets/js/custom.js"></script>

    @RenderSection("scriptLogin", false)


<script>
         $(() => {


             //for error
            var errorMsg = "@ViewData["error"]";
            if (errorMsg != "") {
                notification("error", "@ViewData["error"]");

            }
            //for success
            var SuccessMsg = "@ViewData["success"]";
            if (SuccessMsg != "") {
                notification("success", "@ViewData["success"]");

            }


        });

        function notification(type, message) {
            if (type == "error") {
                iziToast.error({
                    title: type,
                    message: message,
                    position: 'topRight'
                });
            }

            if (type == "success") {
                iziToast.success({
                    title: type,
                    message: message,
                    position: 'topRight'
                });
            }


        }
</script>
</body>


