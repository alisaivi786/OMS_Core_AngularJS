@model Users
@{

    Layout = "/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Login";

}

<section class="section">
    <div class="container mt-5">
       
                <div class="card card-primary" style="width:44%; margin-left:28%">
                    <div class="card-header">
                        <img alt="image" src="~/assets/@Constants.LOGIN_PAGE_LOGO" height="80" style="margin-left:33%;" /><br />
                    </div>
                    <div class="card-body">
                        <h3>Login</h3>
                        <form asp-controller="Login" asp-action="Authorize" class="needs-validation" novalidate="">
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input asp-for="Username" type="text" class="form-control" tabindex="1" required autofocus
                                       placeholder="Username" autocomplete="off">

                                <div class="invalid-feedback">
                                    Please fill in your username
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="control-label">Password</label>
                                @*<div class="d-block">
            <label for="password" class="control-label">Password</label>
            <div class="float-right">
                <a href="#" class="text-small">
                    Forgot Password?
                </a>
            </div>
        </div>*@
                                <input asp-for="Password" type="password" class="form-control" tabindex="2" required
                                       placeholder="Password" autocomplete="off">
                                <div class="invalid-feedback">
                                    please fill in your password
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                    Login
                                </button>
                            </div>

                            <div class="form-group text-center">
                                <span>
                                    If you have any queries contact us <br />
                                   @Constants.EMAIL
                                </span>
                            </div>
                        </form>


                  
            </div>
        </div>
    </div>
</section>

@section scriptLogin{

    <script>
        $(() => {

            localStorage.setItem("flag", true);

             //for error
            var errorMsg = "@TempData["error"]";
            if (errorMsg != "") {
                notification("error", "@TempData["error"]");

            }
            //for success
            var errorMsg = "@TempData["success"]";
            if (errorMsg != "") {
                notification("success", "@TempData["success"]");

            }
        });

        function notification(type, message) {
            if (type == "error") {
                iziToast.error({
                    title: type,
                    message: message,
                    position: 'topRight'
                });
            }
            
        }
    </script>
}